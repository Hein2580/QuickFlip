			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Test script to validate QuickFlip API response",
							"pm.test(\"Response time is less than 5000ms\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(5000);",
							"});",
							"",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.expect(pm.response.code).to.eql(200);",
							"});",
							"",
							"pm.test(\"Response has JSON body\", function () {",
							"    pm.response.to.have.jsonBody();",
							"});",
							"",
							"pm.test(\"Response has required fields\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('result');",
							"    ",
							"    if (jsonData.result === 'OK') {",
							"        pm.expect(jsonData).to.have.property('sessionkey');",
							"        pm.expect(jsonData).to.have.property('cts');",
							"        pm.expect(jsonData.sessionkey).to.be.a('string');",
							"        pm.expect(jsonData.sessionkey.length).to.be.greaterThan(10);",
							"    }",
							"});",
							"",
							"// Log response for debugging",
							"const responseJson = pm.response.json();",
							"console.log(\"Response Status:\", pm.response.code);",
							"console.log(\"Response Body:\", responseJson);",
							"",
							"if (responseJson.result === 'OK') {",
							"    console.log(\"✅ Login Successful!\");",
							"    console.log(\"Session Key:\", responseJson.sessionkey);",
							"    console.log(\"Timestamp:\", responseJson.cts);",
							"} else {",
							"    console.log(\"❌ Login Failed:\", responseJson.result);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
